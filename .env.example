# Application Configuration
APP_NAME="RandomString API"
APP_VERSION="0.1.0"
APP_DESCRIPTION="A FastAPI microservice that generates cryptographically secure random strings"

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# API Configuration
API_V1_PREFIX=/api/v1

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=false
CORS_ALLOW_METHODS=["GET"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_TIMES=100
RATE_LIMIT_SECONDS=60

# Security
SECURITY_HEADERS_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Debug
DEBUG=false
